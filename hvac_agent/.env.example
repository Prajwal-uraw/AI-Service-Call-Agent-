# HVAC Voice Agent Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# OpenAI API Key (required for AI agent)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Application name (displayed in logs and API)
APP_NAME=HVAC Voice Agent

# HVAC Company name (used in voice prompts)
HVAC_COMPANY_NAME=KC Comfort Air

# Debug mode (enables /docs endpoint)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log format (standard or json)
LOG_FORMAT=standard

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Database URL
# SQLite (development): sqlite:///./hvac_agent.db
# PostgreSQL (production): postgresql+psycopg2://user:password@host:5432/dbname
DATABASE_URL=sqlite:///./hvac_agent.db

# Enable SQL query logging
SQL_ECHO=false

# ===========================================
# OPENAI CONFIGURATION
# ===========================================

# OpenAI model for chat completions
OPENAI_MODEL=gpt-4o-mini

# Maximum tool calls per turn
MAX_TOOL_CALLS=5

# ===========================================
# TWILIO CONFIGURATION (for production)
# ===========================================

# Twilio Account SID (optional, for validation)
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token (optional, for validation)
# TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# WebSocket URL for streaming (used in TwiML)
# STREAM_WEBSOCKET_URL=wss://your-domain.com/twilio/stream

# ===========================================
# VOICE CONFIGURATION
# ===========================================

# Default voice tone (professional, friendly, empathetic, urgent, calm)
DEFAULT_VOICE_TONE=friendly

# ===========================================
# CORS CONFIGURATION
# ===========================================

# Allowed origins (comma-separated)
CORS_ORIGINS=*

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server port
PORT=8000
