{
  "name": "alertstream-engine",
  "version": "1.0.0",
  "description": "SMS Alert System Backend Engine",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build needed - this is a Node.js backend server'",
    "migrate": "node -r dotenv/config ./migrations/001_create_tables.js",
    "migrate:additional": "node -r dotenv/config ./migrations/002_additional_tables.js",
    "migrate:sql": "psql $DATABASE_URL -f migrations/001_initial_schema.sql && psql $DATABASE_URL -f migrations/002_add_indexes.sql",
    "worker": "node -r dotenv/config ./src/workers/smsWorker.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "validate-env": "node -r dotenv/config -e \"require('./src/utils/validateEnv').validateEnv()\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "twilio": "^4.19.0",
    "bull": "^4.11.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "express-validator": "^7.0.1",
    "nodemailer": "^6.9.7",
    "stripe": "^14.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
